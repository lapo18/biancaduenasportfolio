---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";


const proyectos : Array<FeatureItem> =[
  {title:"BANPERU: El nuevo banco de Perú",
  description:"Challenge sobre desarrollo de la plataforma web y la aplicación móvil en el ámbito financiero 💻 📱",
  image:"../src/assets/banperu-1024x670.png",
},
  {title:"BANPERU: El nuevo banco de Perú",
  description:"Challenge sobre desarrollo de la plataforma web y la aplicación móvil en el ámbito financiero 💻 📱",
  image:"../src/assets/banperu-1024x670.png",
},
  {title:"BANPERU: El nuevo banco de Perú",
  description:"Challenge sobre desarrollo de la plataforma web y la aplicación móvil en el ámbito financiero 💻 📱",
  image:"../src/assets/banperu-1024x670.png",
}
]
---

<ContentSection title="Features" id="features">
  <h2>Mis Proyectos</h2>
  <ul>
    { proyectos.map(({ title, description, image },index) =>(
      <section>
      <div class="mx-auto mb-12 max-w-screen-2xl shadow-[0_0px_2px_0px_rgba(0,0,0,0.5)]">
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
          <div class={` p-8 md:p-12 lg:px-16 lg:py-24 order-2 ${index%2==0 ? 'md:order-1' : ''}`}>
            <div class="flex flex-col justify-center items-center max-w-xl text-center order-2">
              <h2 class="text-2xl font-bold font-title text-black">
                {title}
              </h2>
    
              <p class="text-[#55595c] mt-8 mb-12 sm:block">
                {description}              
                </p>
    
              <div class="mt-6 md:mt-8">
                <a
                  href="#"
                  class=" rounded border border-black bg-primary px-6 py-3 leading-4 text-sm font-medium font-p transition hover:bg-secondary hover:text-white focus:outline-none focus:ring focus:ring-yellow-400"
                >
                  Ver más
                </a>
              </div>
            </div>
          </div>
    
          <div class={`grid gap-4 md:grid-cols-1 lg:grid-cols-1 order-1 ${index % 2 == 0 ? 'md:order-1':''}`}>
            <img
              alt="Student"
              src={image}
              class="w-full object-cover  md:h-full"
            />
    
           
          </div>
        </div>
      </div>
    </section>
    ))
    }
    
  </ul>
 
</ContentSection>
